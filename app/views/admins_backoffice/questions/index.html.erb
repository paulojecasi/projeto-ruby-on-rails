<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">  Lista das Questões </h1>
    </div>
    <!-- /.col-lg-12 -->
</div>





<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover ">
        <thead>
            <tr>
                <!--  PJCS - vamos pegar os titulos direto do: 
                  app\helpers\admins_backoffice_helper.rb  e de la no:
                  config\locales\models.pt-BR.yml

                <th>Id</th>
                <th>Descrição</th>
                <th>Assunto </th>
                <th>
                -->

                <th> <%= translate_attribute(@questions, :id) %> 
                <th> <%= translate_attribute(@questions, :description) %> 
                <th> <%= translate_attribute(@questions, :subject) %> 
                <th>

                    <%= link_to new_admins_backoffice_question_path, class:"btn btn-success btn-circle btn-lg" do %>
                        <i class="fa fa-plus"></i>
                    <% end %> 
                
                </th>
            </tr>
        </thead>

        <tbody>
            <% @questions.each do |question| %>
            <tr>
                <td><%= question.id %></td>
                <td><%= question.description.truncate(70) %></td>
                 <td><%= question.subject.description.truncate(30) %></td>
                <td style="width: 120px">

                    <!--
                     Este ID sera recebido no: \app\controllers\admins_backoffice\admins_controller.rb - PJCS 
                    -->
                    <%= link_to edit_admins_backoffice_question_path(question.id), class:"btn btn-primary btn-circle" do %>
                        <i class="fa fa-edit"></i>
                    <% end %> 

                    <%= link_to admins_backoffice_question_path(question.id), method: :delete, class:"btn btn-danger btn-circle", data: {confirm: "Excluir Questão?"} do %>
                        <i class="fa fa-minus"></i>
                    <% end %>

                </td>
            </tr>
            <% end %>
        </tbody>
    </table>

    <!-- tem que adicionar no: app\controllers\admins_backoffice\admins_controller.rb, no index 
       o parametro "page params[:page] pra concluir a paginação da lista" - PJCS 
         pra controlar o qtd de itens por pagina, vamos no: app\models\admin.rb
    -->
    <div class= "text-center">
        <%= paginate @questions %>
    </div>

</div>