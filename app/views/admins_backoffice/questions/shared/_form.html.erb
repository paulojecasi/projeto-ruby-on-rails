    <% if @question.errors.any? %> 

        <!-- mensagens de alerta, tenho mais exemplos em MINHAS ANOTAÇÔES - PJCS -->
        <div class="alert alert-danger" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <ul>
                <% @question.errors.full_messages.each do |message| %>
                    <li>  <%= message %> </li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div class="col-md-12">
        <h1 class="page-header"> <%= action_message_pjcs %> </h1>
    </div>
    <!-- /.col-lg-12 -->
    <div class="panel-body">
    
                <!--  este forme foi substituido pelo form_with - PJCS 
                <form role="form">
                -->
                <!-- por padrao, o form abaixo trabalha com Java Script, como quero trabalhar com 
                     html, vamos colocar a tag: Local: true 
                -->
        <%= form_with(model: [ :admins_backoffice, @question ], local: true) do|form| %>
           
            <div class="form-group" >
                <div class="row">
                    <div class="col-md-3">
                        <!-- PJCS - vamos alterar para RUBY
                        <label>Id:</label>
                        <input class="form-control" placeholder="Enter text">
                        -->
                        
                        <%= form.label :id %>
                        <%= form.text_field :id, class:"form-control", placeholder:"Id Assuntos/Areas", readonly:"true" %>
                        
                    </div>
                </div>
            </div>
            
            <div class="form-group" >
                <div class="row">
                    <div class="col-md-9">
                        <!-- PJCS - vamos alterar para RUBY
                        <label>Email:</label>
                        <input class="form-control" placeholder="Enter text">
                        -->
                        
                        <%= form.label :description %>
                        <!-- aqui nao sera "form.text_field" , e sim "form.text_area", pois o campo
                           foi declarado no banco como text, e não string PJCS  -->
                        <%= form.text_area :description, class:"form-control", placeholder:"Descrição ", rows: 5 %>

                    </div>
                </div>
            </div>

            <div class="form-group" >
                <div class="row">
                    <div class="col-md-9">
                        <!-- PJCS - vamos alterar para RUBY
                        <label>Email:</label>
                        <input class="form-control" placeholder="Enter text">
                        -->
                        
                        <%= form.label :subject_id %>
                        <%= form.collection_select(:subject_id, @subjects, :id, :description, {}, {class:"form-control"}) %>

                    </div>
                </div>
            </div>

                    

                    <!-- type="submit" - envia os dados inseridos no form - PJCS -->
            <button type="submit" class="btn btn-primary"> <%= action_botao_pjcs %> </button>
                    
                
                    
        <% end %>
    </div>

