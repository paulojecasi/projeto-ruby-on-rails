                        -->
                        
                        <%= form.label :id %>
                        <%= form.text_field :id, class:"form-control", placeholder:"Id do Adm ", readonly:"true" %>
                        
                    </div>
                </div>
            </div>
            
            <div class="form-group" >
                <div class="row">
                    <div class="col-md-9">
                        <!-- PJCS - vamos alterar para RUBY
                        <label>Email:</label>
                        <input class="form-control" placeholder="Enter text">
                        -->
                        
                        <%= form.label :email %>
                        <%= form.text_field :email, class:"form-control", placeholder:"Email do Adm " %>

                    </div>
                </div>
            </div>

            <div class="form-group" >
                <div class="row">
                    <div class="col-md-6">
                        <!-- PJCS - vamos alterar para RUBY
                        <label>Senha:</label>
                        <input class="form-control" placeholder="Enter text">
                        --> 

                        <%= form.label :password %>
                        <%= form.password_field :password, class:"form-control", placeholder:"Senha do Adm " %>

